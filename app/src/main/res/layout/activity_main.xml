<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="331dp"
        android:layout_height="370dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/canvas"
        app:layout_constraintBottom_toBottomOf="@id/canvas"
        app:layout_constraintLeft_toLeftOf="@id/canvas"
        app:layout_constraintRight_toRightOf="@id/canvas"
        app:layout_constraintVertical_bias="0.9"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="541dp" />

    <Button
        android:id="@+id/startSpil"
        android:layout_width="189dp"
        android:layout_height="99dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="208dp"
        android:background="#9C27B0"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/start_spil"
        android:textColor="#00FF41"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintLeft_toLeftOf="@id/canvas"
        app:layout_constraintRight_toRightOf="@id/canvas"
        app:layout_constraintTop_toTopOf="@id/canvas" />


    <View
        android:id="@+id/canvas"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="#724971FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sjov_leg"
        android:textColor="#FB0000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/canvas"
        app:layout_constraintLeft_toLeftOf="@id/canvas"
        app:layout_constraintRight_toRightOf="@id/canvas"
        app:layout_constraintTop_toTopOf="@id/canvas"
        app:layout_constraintVertical_bias="0.03" />


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/skriv_dit_navn"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="138dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintLeft_toLeftOf="@id/canvas"
        app:layout_constraintRight_toRightOf="@id/canvas"/>

    <Button
        android:id="@+id/highscore"
        android:layout_width="189dp"
        android:layout_height="99dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="208dp"
        android:background="#E91E63"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="highscore"
        android:textColor="#00FF41"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/startSpil"
        app:layout_constraintTop_toTopOf="@id/canvas" />


</androidx.constraintlayout.widget.ConstraintLayout>